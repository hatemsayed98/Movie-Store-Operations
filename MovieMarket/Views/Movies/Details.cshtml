@using MovieStore.Models
@model Movie

@{
    ViewData["Title"] = Model.Name;
}

<div class="box mt-4 ">
    <div class="row">
    <div class="row bg-light rounded-edge justify-content-between ">
        <div class="col-md-2 m-xl-4 poster-detail p-1">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))"  alt="@Model.Name" />
        </div>
        <div class="col-md-7 p-5">
            <div class="d-flex justify-content-between">
                <h2>@Model.Name</h2>
                <span class="mr-4">
                    <i class="bi bi-star-fill text-warning"></i>
                    <span class="font-weight-bold">@Model.Rate.ToString("0.0")</span>
                </span>
            </div>

            <span class="text-muted mr-3">
                <i class="bi bi-calendar-date text-warning"></i>@Model.Year
            </span>
            &nbsp;&nbsp;&nbsp; &nbsp;
            <span class="text-muted">
                <i class="bi bi-film text-warning"></i> @Model.Genre.Name
            </span>
            <hr >
            <p class="mt-3 text-justify">
                @Model.StoryLine
            </p>
        </div>
    </div>
</div>
</div>